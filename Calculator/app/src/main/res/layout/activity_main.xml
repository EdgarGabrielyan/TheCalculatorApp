<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:background="@color/black"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.calculator.am.calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/display_root"
        android:layout_marginTop="40dp"
        android:background="@color/background"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:id="@+id/display"
            android:textSize="42sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/display_root"
        android:layout_marginTop="50dp">
        
        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="4">

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:id="@+id/btnSeven"
                android:text="@string/seven.btn"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:id="@+id/btnEight"
                android:text="@string/eight.btn"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:id="@+id/btnNine"
                android:text="@string/nine.btn"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:id="@+id/btnPlus"
                android:text="@string/plus.btn"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:id="@+id/btnFour"
                android:text="@string/four.btn"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:id="@+id/btnFive"
                android:text="@string/five.btn"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:id="@+id/btnSix"
                android:text="@string/six.btn"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:id="@+id/btnMinus"
                android:text="@string/minus.btn"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:id="@+id/btnOne"
                android:text="@string/one.btn"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:id="@+id/btnTwo"
                android:text="@string/two.btn"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:id="@+id/btnThree"
                android:text="@string/three.btn"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:id="@+id/btnMultiply"
                android:text="@string/multiply.btn"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:id="@+id/btnCancel"
                android:text="@string/cancel.btn"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:id="@+id/btnZero"
                android:text="@string/zero.btn"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:id="@+id/btnEquals"
                android:text="@string/equals.btn"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30sp"
                android:id="@+id/btnDivide"
                android:text="@string/divide.btn"/>




        </android.support.v7.widget.GridLayout>


    </FrameLayout>

</RelativeLayout>
